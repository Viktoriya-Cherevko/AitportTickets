    @{
        if (User.IsInRole("User"))
        {
            <div class="middle-content">
                <div class="container">
                    <h1 class="text-capitalize text-danger">Edit passenger</h1>

                    <h2 class="text-dark"></h2>


                    <form method="post" asp-action="Update">
                        <input asp-for="Id" hidden />
                        <input asp-for="FlightId" hidden />
                        <div class="row">
                            <div class="col">
                                <label name="FirstName">First name</label>
                            </div>
                            <div class="col">
                                <input asp-for="FirstName" name="FirstName" type="text" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label name="LastName">Last name</label>
                            </div>
                            <div class="col">
                                <input type="text" asp-for="LastName" name="LastName" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label name="DateOfBirth">Date Of Birth</label>
                            </div>
                            <div class="col">
                                <input asp-for="DateOfBirth" name="DateOfBirth" type="date" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label name="Passport">Passport</label>
                            </div>
                            <div class="col">
                                <input asp-for="Passport" name="Passport" type="text" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label name="SexId">Sex</label>
                            </div>
                            <div class="col">
                                <select name="SexId">
                                    <option value="1">Male</option>
                                    <option value="2">Female</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-warning" type="submit">Update</button>
                        <a class="btn btn-secondary" asp-area="" asp-controller="Passengers" asp-action="Index">Back</a>
                    </form>
                </div>

            </div> <!-- /.middle-content -->

        }
        else
        {
            <div class="middle-content">
                <div class="container">
                    <div class="" style="font-size: 24px; color:red;">
                        Login or register before buying a ticket
                    </div>
                    <a class="btn btn-warning" asp-controller="Flights" asp-action="Index">Flights</a>
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    <a class="btn btn-info" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            </div>
        }
    }



    <div class="ticket-list">
